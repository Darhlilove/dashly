# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_PATH=data/dashly.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security Configuration (CRITICAL - SET THESE PROPERLY)
# Generate a secure random key: python -c "import secrets; print(secrets.token_urlsafe(32))"
DASHLY_API_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_AT_LEAST_16_CHARS
REQUIRE_AUTH=true

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Development Settings
DEBUG=false
LOG_LEVEL=info

# Rate Limiting
MAX_REQUESTS_PER_HOUR=100
MAX_UPLOADS_PER_HOUR=10

# SQL Execution Configuration
# Query execution timeouts (seconds)
QUERY_TIMEOUT_SECONDS=30
EXPLAIN_TIMEOUT_SECONDS=10

# Result set limits
MAX_RESULT_ROWS=10000
MAX_RESULT_SIZE_MB=50.0

# Concurrent query limits
MAX_CONCURRENT_QUERIES=5
QUERY_QUEUE_TIMEOUT_SECONDS=30

# Performance monitoring
SLOW_QUERY_THRESHOLD_MS=1000
ENABLE_PERFORMANCE_LOGGING=true
LOG_ALL_QUERIES=false

# Memory limits
MEMORY_LIMIT_MB=512.0
ENABLE_MEMORY_MONITORING=true

# Security settings
STRICT_VALIDATION_MODE=true
ENABLE_QUERY_LOGGING=true
LOG_SECURITY_VIOLATIONS=true

# Database connection settings
CONNECTION_POOL_SIZE=5
CONNECTION_TIMEOUT_SECONDS=5
ENABLE_CONNECTION_POOLING=true

# Query caching settings
ENABLE_EXPLAIN_CACHING=true
EXPLAIN_CACHE_TTL_SECONDS=300
EXPLAIN_CACHE_MAX_SIZE=100

# Development and debugging
DEBUG_MODE=false
ENABLE_QUERY_PROFILING=false

# Security Notes:
# - NEVER use default API keys in production
# - Set REQUIRE_AUTH=false ONLY for development/testing
# - Use HTTPS in production
# - Regularly rotate API keys
# - Monitor logs for security events